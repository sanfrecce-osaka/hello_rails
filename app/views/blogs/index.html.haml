%p#notice= notice

%h1 Listing Blogs

%table
  %thead
    %tr
      %th Title
      %th{colspan: '3'}

  %tbody
    - @blogs.each do |blog|
      %tr
        %td= blog.title
        %td= link_to 'Show', blog
        %td= link_to 'Edit', edit_blog_path(blog)
        %td= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Entry', new_blog_path
