= form_with(model: blog, local: true) do |form|
  - if blog.errors.any?
    #error_explanation
      %h2 #{pluralize(blog.errors.count, 'error')} prohibited this entry from being saved:

      %ul
        - blog.errors.full_messages.each do |message|
          %li= message

  .field
    = form.label :title
    = form.text_field :title, id: :blog_title

  .actions
    = form.submit 'Save'
